{
  "family": "eva-app-server",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::580291028887:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::580291028887:role/ecsTaskRole",
  "cpu": "512",
  "memory": "1024",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX"
  },
  "containerDefinitions": [
    {
      "name": "eva-app-server",
      "image": "580291028887.dkr.ecr.us-east-1.amazonaws.com/eva-app-server:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "MONGODB_URI",
          "valueFrom": "arn:aws:ssm:us-east-1:580291028887:parameter/eva/mongodb-uri"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:ssm:us-east-1:580291028887:parameter/eva/jwt-secret"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/eva-app-server",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}